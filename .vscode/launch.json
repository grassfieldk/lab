{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Bun: Run Current File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeExecutable": "bun",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
